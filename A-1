numero=0
maior=0
menor=0

numero= int(input("Escreva um número: "))
menor=numero
maior=numero

while (numero != 0):
    if(numero>maior):
        maior=numero

    if(numero<menor) and (numero != 0):
        menor=numero

    numero=int(input("Informe um número: "))

print(f"O maior numero foi: {maior}")
print(f"O menor numero foi:{menor}")
