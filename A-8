n = " "
n_1 = 0
n_2 = 0
n_3 = 0
n_4 = 0
m = 0.0

n = input("Informe seu NOME: ")
n_1 = int(input("Informe a nota 1: "))
n_2 = int(input("Informe a nota 2: "))
n_3 = int(input("Informe a nota 3: "))
n_4 = int(input("Informe a nota 4: "))

m = (n_1 + n_2 + n_3 + n_4) / 4


if(m >= 6):
    print(f"{n}, você PASSOU!")
else:
    if(m >= 4) and (m < 6):
        print(f"{n}, você está de RECUPERAÇÃO!")
    else:
        print(f"{n}, você está de REPROVADO!")

print(f"E sua média é: {m}")
